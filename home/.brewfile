# ~/.brewfile
#
# Use this file to install software via Homebrew when setting up a new Mac.


# Check for potential problems.
doctor

# Update Homebrew itself.
update

# Install Bash 4.
install bash

# Install a more up to date version of rsync.
install homebrew/dupes/rsync

# The OpenSSL provided by OS X is too old for some software.
install openssl

# Ruby version management.
install --HEAD rbenv
install ruby-build

# Install some useful software.
install ack
install jhead
install jpeg
install mitmproxy
install ssh-copy-id
install tree
install unrar
install wget

# Databases.
install mysql --enable-local-infile --with-archive-storage-engine --with-blackhole-storage-engine --with-embedded
install postgresql --enable-dtrace --ossp-uuid --python
install mongodb
