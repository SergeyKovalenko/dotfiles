# ~/.brewfile
#
# Use this file to install software via Homebrew when setting up a new Mac

# Check for potential problems
doctor

# Update Homebrew itself
update

# More up to date versions of software provided by OS X
install bash
install openssl
install homebrew/dupes/rsync

# Common useful software
install ack
install ssh-copy-id
install tree
install unrar
install wget
install xz

# Image processing
install graphicsmagick --with-little-cms2 --without-magick-plus-plus
install jhead

# Better to leave OS X system Python alone
install python

# Ruby version management
install --HEAD rbenv
install ruby-build

# Databases
install mysql --enable-local-infile --with-archive-storage-engine --with-blackhole-storage-engine
install postgresql --enable-dtrace
install mongodb
install redis

# Extra fun stuff
install spark

# Remove outdated versions from the cellar
cleanup
